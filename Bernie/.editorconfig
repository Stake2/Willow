[*.lua]
indent_style = space
indent_size = 4
max_line_length = 999
keep_simple_control_block_one_line = true
keep_simple_function_one_line = true
keep_table_inline = true
break_after_functioncall_lp = false
break_after_functiondef_lp = false
break_after_do = false
break_after_while = false
break_after_repeat = false
break_after_if = false
break_after_else = false
break_after_assignment_operator = false
align_continuous_assign_statement = false
align_table_field = false
